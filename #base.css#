/* -------------------------------------------------------------
   [2] ヘッダーブロック内に関する指定 */

/* キーワード */
h1 {
  font-size: 100%;
  font-weight: normal;
  position: absolute;
  top: 20px;
  right: 10px;
}

/* 企業名｜ショップ名｜タイトル */
.logo {
  font-size: 160%;
  position: absolute;
  top: 20px;
  left: 20px;
}

.logo a {
  text-decoration: none;
  color: #000;
}

.logo a:hover {
  text-decoration: none;
  color: #f00;
}

/* ページの概要 */
.description {
  position: absolute;
  top: 50px;
  left: 20px;
}

/* グローバルナビゲーション */
#globalnavi {
  list-style-type: none;
  width: 800px;
  height: 28px;
  padding-top: 12px;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #333;
}

#globalnavi li { display: inline; }

#globalnavi a {
  text-decoration: none;
